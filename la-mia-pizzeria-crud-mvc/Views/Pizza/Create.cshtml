@model Pizza

<div class="container">
    <h2>New pizza details</h2>
    <form asp-controller="Pizza" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <strong>Name:</strong>
            <input asp-for="Name" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <strong>Description:</strong>
            <input asp-for="Description" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <strong>Photo:</strong>
            <input asp-for="PhotoUrl" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <strong>Price:</strong>
            <input asp-for="Price" class="d-block w-100" />
        </div>
        <div class="text-end">
            <input type="submit" class="btn btn-small btn-secondary" value="save">
        </div>
    </form>
</div>
